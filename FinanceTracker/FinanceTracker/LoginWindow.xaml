<Window x:Class="FinanceTracker.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinanceTracker.Views"
        mc:Ignorable="d"
        Title="LoginWindow" Height="300" Width="300">
    <Grid>
        <TextBox x:Name="usernameTextBox" HorizontalAlignment="Left" Height="23" Margin="121,65,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="passwordTextBox" HorizontalAlignment="Left" Height="23" Margin="121,93,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="usernameLabel" Content="Username:" HorizontalAlignment="Left" Margin="51,63,0,0" VerticalAlignment="Top" Height="23" Width="65"/>
        <Label x:Name="passwordLabel" Content="Password:" HorizontalAlignment="Left" Margin="55,89,0,0" VerticalAlignment="Top" Width="65"/>
        <Button x:Name="loginButton" Content="Login" HorizontalAlignment="Left" Margin="121,121,0,0" VerticalAlignment="Top" Width="75" Click="loginButton_Click"/>
        <Button x:Name="createUserButton" Content="Create User" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="121,146,0,0" Click="createUserButton_Click"/>

    </Grid>
</Window>
